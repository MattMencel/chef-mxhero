driverClass=com.mysql.jdbc.Driver
jdbcUrl=jdbc:mysql://${mxhero.db.host}:${mxhero.db.port}/mxhero
username=<%= node['mxhero']['db_user'] %>
password=<%= node['mxhero']['db_pass'] %>
idleConnectionTestPeriodInMinutes=1
